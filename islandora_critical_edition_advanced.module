  module_load_include('inc', 'islandora_critical_edition_advanced', 'theme/theme');
  $pid = html_entity_decode(stripslashes($_POST['pid']), ENT_QUOTES, 'UTF-8');
  $versionable_object = islandora_object_load($pid);
